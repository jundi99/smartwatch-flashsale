{
  "name": "smartwatch-flash-sale-backend",
  "version": "1.0.0",
  "description": "Backend API for smartwatch flash sale system",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:stress": "STRESS_TEST=true PORT=3002 PRE_SALE_WAIT_MS=2000 PRODUCT_STOCK=200 nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:stress": "k6 run tests/stress/flash-sale-stress.js",
    "lint": "eslint src/ --fix",
    "lint:check": "eslint src/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "redis": "^4.6.11"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1"
  },
  "keywords": [
    "nodejs",
    "express",
    "flash-sale",
    "api",
    "ecommerce"
  ],
  "author": "",
  "license": "MIT"
}